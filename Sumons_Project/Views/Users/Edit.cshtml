
@model LabTestRegister.Models.EditUserViewModel

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Edit User Details</h3>
            </div>
            <div class="box-body">
                @using (Html.BeginForm("Edit", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)
                        <div class="container">
                            <div class="row st2">
                                <div class="firstcontainer">
                                    <div class="secondcontainer">
                                        <div class="profile-pic">
                                            <div class="picture">
                                                <img src="~/Images/Identity/Users/Profiles/@Html.DisplayFor(m=>m.File) " class="picture-src" id="ProPic" title="" />
                                                <input type="file" name="postedFile" id="postedFile" accept="image/*">
                                            </div>
                                            <h6>Choose Picture</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="personalinfo">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                                        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name", @class = "form-control" })
                                    </div>
                                    <div class="input-group">

                                        <span class="input-group-addon"><i class="fa fa-pencil-square"></i></span>
                                        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name", @class = "form-control" })
                                    </div>
                                    <div class="input-group">

                                        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
                                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                    </div>
                                    <div class="input-group">

                                        <span class="input-group-addon"><i class="fa fa-volume-control-phone"></i></span>
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Phone Number", @class = "form-control" })
                                    </div>
                                    <div class="input-group" style="display:block;padding-bottom:50px;margin-top:20px">
                                        <div style="float: left;">
                                            @Html.ActionLink("Back to List", "Index", new { id = "" }, new { @class = "btn btn-warning UserEditBackSave" })
                                        </div>
                                        <div style="float: right;">
                                            <input type="submit" value="Save" class="btn btn-success UserEditBackSave" />
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="box-footer">
                <div class="row">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#postedFile").change(function () {
                readURL(this);
            });
        });


        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#ProPic').attr('src', e.target.result).fadeIn('slow');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
